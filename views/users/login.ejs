<% layout("/layouts/boilerplate") %>

    <div class="row">
        <h2 class="col-6 offset-3 mt-2">Login</i></h2>
        <div class="col-6 offset-3 mt-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input required name="username" type="text" id="username" class="form-control">
                    <div class="invalid-feedback">Please! enter the username</div>
                </div>
                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    <input required name="password" type="password" id="password" class="form-control">
                    <div class="invalid-feedback">Please! enter the password</div>
                </div>
                <button class="btn btn-dark mt-2">Submit</button>
            </form>
        </div>
    </div>